{
  "name": "serverless-boilerplate-express-typescript",
  "version": "1.0.0",
  "description": "Serverless framework ExpressJS TypeScript",
  "scripts": {
    "dev:db": "tsx scripts/database.ts",
    "dev:server": "cross-env NODE_ENV=development NODE_OPTIONS=--dns-result-order=ipv4first sls offline start --stage offline",
    "dev": "run-p dev:*",
    "tail-log": "sls logs -f app -t",
    "deploy:db": "dotenv -e .env.production -c -- tsx scripts/deployDbProd.ts",
    "deploy:app": "cross-env NODE_ENV=production sls deploy --stage prod",
    "deploy-prod": "run-s deploy:*",
    "remove-prod": "cross-env NODE_ENV=production sls remove --stage prod",
    "clean": "rimraf dist .webpack .serverless",
    "lint": "eslint .",
    "format": "eslint --fix . && prettier '**/*.{json,yaml}' --write --ignore-path .gitignore",
    "check-types": "tsc --noEmit --pretty",
    "test": "jest",
    "test:dev": "start-server-and-test dev http://127.0.0.1:4000 'curl --head http://127.0.0.1:4000'",
    "db:push": "prisma db push",
    "promote:super-admin": "tsx scripts/promoteSuperAdmin.ts",
    "prepare": "husky install",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.535.0",
    "@aws-sdk/client-ses": "^3.535.0",
    "@prisma/client": "^5.11.0",
    "bson": "^4.7.2",
    "cors": "^2.8.5",
    "express": "^4.19.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "nanoid": "^5.0.6",
    "nodemailer": "^6.9.13",
    "pino": "^8.19.0",
    "pino-lambda": "^4.4.0",
    "serverless-http": "^3.2.0",
    "stripe": "^11.18.0",
    "ulid": "^2.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@swc/core": "^1.4.8",
    "@swc/jest": "^0.2.36",
    "@types/aws-lambda": "^8.10.136",
    "@types/cors": "^2.8.17",
    "@types/cross-spawn": "^6.0.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "dotenv-cli": "^7.4.1",
    "esbuild": "^0.16.17",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "execa": "^8.0.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "mongodb-memory-server": "^9.1.7",
    "node-mocks-http": "^1.14.1",
    "npm-run-all": "^4.1.5",
    "p-retry": "^4.6.2",
    "prettier": "^3.2.5",
    "prisma": "^5.11.0",
    "rimraf": "^5.0.5",
    "serverless": "^3.38.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-esbuild": "^1.52.1",
    "serverless-offline": "^13.3.3",
    "serverless-offline-ses-v2": "^1.0.4",
    "supertest": "^6.3.4",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  },
  "author": "Ixartz (https://github.com/ixartz)"
}
